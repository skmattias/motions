<script type="text/javascript">

    function addNewAtt(button, motionId) {
        
        // Spin the button immediately.
        var oldButtonHtml = $(button).html();
        $(button).html(buttonSpinner + oldButtonHtml);
        
        // Add the motion.
        $.ajax({
            traditional: true,
            type: "POST",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            },
            url: "/Admin/?handler=SaveAtt",
            data: JSON.stringify({
                "AttId": 0,
                "MotionId": motionId,
                "Number": $("#newAttNumber").val(),
                "Text": $("#newAttText").val()
            }),
            contentType: 'application/json; charset=utf-8"',
            success: function(result) {
                if (result.result) {
                    location.reload();
                } else {
                    alert(result.message);
                    $(button).html(oldButtonHtml);
                }
            }, error: function() {
                alert("Ok√§nt fel, prova att ladda om sidan");
                $(button).html(oldButtonHtml);
            }
        });
    }
    
</script>

