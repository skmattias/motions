@model int

<div class="row">
    <div class="form-group half-form-input col-2">
        <input class="form-control" type="number" placeholder="Nummer" id="newAttNumber"/>
    </div>
    <div class="form-group col-10">
        <input class="form-control" type="text" placeholder="Att-sats" id="newAttText"/>
    </div>
    
    <div class="col-12">
        <div class="btn-toolbar pull-right">
            <button class="btn btn-secondary" style="margin-right: 0.5em;" onclick="cancelAddAtt(this, @Model)">
                Avbryt
            </button>
            @Html.AntiForgeryToken()
            <button class="btn btn-success" onclick="addNewAtt(this, @Model)">
                Spara
            </button>
        </div>
    </div>
</div>

